<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewCardName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="6dp"
        android:layout_toLeftOf="@id/textViewCardCost"
        android:textColor="@color/textColorDark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewCardCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="8dp"
        android:textColor="@color/textColorDark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewCardType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewCardName"
        android:layout_marginBottom="4dp"
        android:textColor="@color/textColorDark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewCardText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewCardType"
        android:layout_marginBottom="4dp"
        android:textColor="@color/textColorDark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewCardFlavor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewCardText"
        android:layout_marginBottom="6dp"
        android:textColor="@color/textColorDark"
        android:textSize="16sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textViewCardStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewCardFlavor"
        android:layout_marginBottom="4dp"
        android:textColor="@color/textColorDark"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewCardStats"
        android:layout_marginTop="8dp"
        android:textColor="@color/primaryDarkColor"
        android:textSize="18sp" />

</RelativeLayout>